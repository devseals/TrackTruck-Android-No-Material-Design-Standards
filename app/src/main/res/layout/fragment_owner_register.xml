<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".fragments.OwnerRegisterFragment"
                                                   android:id="@+id/ownerRegister">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2" android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.058"
            app:srcCompat="@drawable/owner"/>

    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/imageView3"
            android:textSize="24sp" android:fontFamily="cursive"/>

    <Button
            android:text="Registrar como Dueno"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:id="@+id/ownerRegisterBtn" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textColor="#795548" android:background="#FFCCBC"

            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/ownerRucTxt"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.286"/>

    <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Nombre"
            android:layout_width="200dp"
            android:id="@+id/ownerNameTxt"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3">
        <com.google.android.material.textfield.TextInputEditText
                app:passwordToggleEnabled="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="@string/hint_username"
            android:layout_width="200dp"
            android:id="@+id/ownerRegisterUserTxt"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.502" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ownerNameTxt">
        <com.google.android.material.textfield.TextInputEditText
                app:passwordToggleEnabled="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="@string/hint_password"
            android:layout_width="200dp"
            android:id="@+id/ownerRegisterPassTxt"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ownerRegisterUserTxt" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent">
        <com.google.android.material.textfield.TextInputEditText
                app:passwordToggleEnabled="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="RUC"
            android:layout_width="200dp"
            android:id="@+id/ownerRucTxt"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/ownerRegisterPassTxt">
        <com.google.android.material.textfield.TextInputEditText
                app:passwordToggleEnabled="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
            android:text="Complete los campos para registrarse como dueno."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <ImageView
            android:src="@drawable/pass"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:id="@+id/imageView4" app:layout_constraintEnd_toStartOf="@+id/ownerRegisterPassTxt"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/ownerRegisterPassTxt"
            app:layout_constraintTop_toTopOf="@+id/ownerRegisterPassTxt"/>
    <ImageView
            android:src="@drawable/name"
            android:layout_width="45dp"
            android:layout_height="38dp"
            android:id="@+id/imageView5"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/ownerNameTxt"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/ownerRegisterUserTxt"
            app:layout_constraintEnd_toStartOf="@+id/ownerRegisterUserTxt" android:layout_marginEnd="8dp"/>
    <ImageView
            android:src="@drawable/id"
            android:layout_width="45dp"
            android:layout_height="38dp"
            android:id="@+id/imageView9" app:layout_constraintEnd_toStartOf="@+id/ownerRucTxt"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/ownerRucTxt"
            app:layout_constraintTop_toTopOf="@+id/ownerRucTxt"/>

</androidx.constraintlayout.widget.ConstraintLayout>