<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"

        android:layout_height="100dp"
        android:id="@+id/contentFoodtruck"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="2.5dp"
        android:layout_marginStart="5dp"
        app:layout_goneMarginEnd="2.5dp"
        >


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/foodtruckNameLbl" android:textSize="18sp"
                android:textColor="@android:color/background_dark" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:text="Sample Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/foodtruckNameTextview" android:textSize="18sp"
                android:textColor="@android:color/holo_green_dark"
                app:layout_constraintBottom_toBottomOf="@+id/foodtruckNameLbl"
                app:layout_constraintStart_toEndOf="@+id/foodtruckNameLbl" android:layout_marginStart="8dp"/>
        <TextView
                android:text="Costo Promedio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/avgCostLbl" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/foodtruckNameLbl"
                android:textColor="@android:color/background_dark"/>
        <TextView
                android:text="Sample Cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/avgCostTextView"
                android:textColor="@android:color/holo_green_dark"
                app:layout_constraintBottom_toBottomOf="@+id/avgCostLbl"
                app:layout_constraintStart_toEndOf="@+id/avgCostLbl" android:layout_marginStart="8dp"/>
        <TextView
                android:text="Tipo de Comida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/foodTypeLbl" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/avgCostLbl"
                android:textColor="@android:color/background_dark"/>
        <TextView
                android:text="Sample FoodType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/foodTypeTextview"
                android:textColor="@android:color/holo_green_dark"
                app:layout_constraintBottom_toBottomOf="@+id/foodTypeLbl"
                app:layout_constraintStart_toEndOf="@+id/foodTypeLbl" android:layout_marginStart="8dp"/>
        <ImageView
                android:layout_width="155dp"
                android:layout_height="85dp" app:srcCompat="@drawable/ft3"
                android:id="@+id/foodtruckImageview" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:scaleType="fitCenter"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>