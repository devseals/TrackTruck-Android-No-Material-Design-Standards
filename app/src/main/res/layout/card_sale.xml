<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="100dp"
                                                   app:cardElevation="5dp"
                                                   app:cardCornerRadius="10dp"
                                                   android:layout_marginTop="8dp"
                                                   android:layout_marginStart="8dp"
                                                   app:layout_goneMarginEnd="2.5dp"
                                                   android:id="@+id/contentSale">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/saleRegister" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:textSize="20sp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/saleAmount" android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/saleRegister" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:textSize="20sp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/saleDate" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/saleRegister"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/saleRegister"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/saleContent" app:layout_constraintStart_toEndOf="@+id/saleAmount"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/saleAmount"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>